extends layout.pug

block head
  link(rel='stylesheet' href='/stylesheets/user-page.css')
  meta(name='title' property='og:title' content='Meowdium')
  meta(name='type' property='og:type' content='Website')
  meta(name='description' property='og:description' content='A simple Medium clone for cat stories')
  meta(name='image' property='og:image' content='https://user-images.githubusercontent.com/54250710/140093358-05d99d6b-24bc-4b32-af94-2e2501edc687.png')
  meta(name='url' property='og:url' content='https://meowdium.herokuapp.com/')
  meta(name='site_name' property='og:site_name' content='Meowdium')

block content
  div.content
    div.index-top.top-section
      h2
    div(class='feed')
      each post in posts
        div(class='post')
          a(class='post-link' href=`/pawsts/${post.id}`)
            div(class='post-title')= post.title
            if (post.subtitle)
              div(class='post-subtitle')= post.subtitle
          div(class='post-info')
            a(class="author-link" href=`/users/${post.userId}`)
              span(class='post-user')= post.User.userName
            span(class='post-time')= post.updatedAt.toDateString()

  script(type="module" src="/javascripts/index.js")

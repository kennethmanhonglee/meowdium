mixin field(fieldName, fieldValue, fieldType, placeholder)
  div(class='form-group')
    if fieldType === 'textarea'
      textarea(id=fieldName name=fieldName class='form-control' rows='5' required)= fieldValue
    else
      input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder class='form-control' required)

mixin validationErrorSummary(errors)
  if errors
    div(class='errors')
      p The following error(s) occurred:
      ul
        each error in errors
          li= error
